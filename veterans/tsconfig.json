{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@comComps/*": ["components/common/*"],
      "@comps/*": ["components/*"],
      "@helpers/*": ["helpers/*"],
      "@lib/*": ["lib/*"],
      "@keystone/*": ["keystone/*"],
      "hooks/*": ["hooks/*"],
      "constants/*": ["constants/*"],
      "utils/*": ["utils/*"]
    },
    "jsx": "preserve",
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      },
      {
        "name": "next"
      }
    ],
    "types": ["node"]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "keystone-fallback.d.ts",
    ".keystone/types.ts"
  ],
  "exclude": ["node_modules"]
}
